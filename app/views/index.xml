<Alloy>
	<Window>
		
		<NavigationGroup id="navGroup">
			<Window id="tabWin" >
				<OptionDialog id="dialog" cancel="2" onClick="choose" title="添加照片">
					<Options>
		                <Option >照相</Option>
		                <Option >从相册选取</Option>
		                <Option>取消</Option>
		            </Options>
				</OptionDialog>
				<TabGroup id="tabGroup">
					<Tab id="tab1" title="最近" >
						<Require src="blogList"/>
					</Tab>
					<Tab id="tab2" title="本月" >
						<Require src="monthList"/>
					</Tab>
					<Tab id="tab3" >
						<Window />
					</Tab>
					<Tab id="tab4" title="今年">
						<Require src="yearList"/>
					</Tab>
					<Tab id="tab5" title="随机" >
						<Require src="random"/>
					</Tab>
				</TabGroup>
				<View id="snapView" onSingletap="showDialog" />
			</Window>
		</NavigationGroup>
		
	</Window>
</Alloy>