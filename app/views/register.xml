<Alloy>
	<Window >
		
		<View id="top">
			<Label id="registerButton" text="注册" onClick="register"/>
			<Label id="backButton" text="返回" onClick="back"/>
		</View>

		<View id="container">
			<Label id="registerTitle" text="注册一个新帐户："/>
			<View class="inputContainer">
				<Label class="inputLabel" text="邮箱"/>
				<TextField id="emailInput" class="input"/>
			</View>
			<View class="inputContainer">
				<Label class="inputLabel" text="密码"/>
				<TextField id="passwordInput" class="input"/>
			</View>	
			<View class="inputContainer">
				<Label class="inputLabel" text="昵称"/>
				<TextField id="nicknameInput" class="input"/>
			</View>
			<View class="inputContainer">
				<Label class="inputLabel" text="头像"/>
				<ImageView id="avatar" onClick="showDialog" class="input"/>
			</View>
		</View>

		<OptionDialog id="dialog" cancel="2" onClick="choose" title="添加照片">
			<Options>
	            <Option >照相</Option>
	            <Option >从相册选取</Option>
	            <Option>取消</Option>
	        </Options>
		</OptionDialog>

	</Window>
</Alloy>